<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Header容器 (商品标题和价格) -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.asynclayoutdemo.AsyncViewStub
            android:id="@+id/headerViewStub"
            app:layoutRes="@layout/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <!-- Gallery容器 (图片展示区) -->
    <FrameLayout
        android:id="@+id/galleryContainer"
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <com.example.asynclayoutdemo.AsyncViewStub
            android:id="@+id/galleryViewStub"
            app:layoutRes="@layout/layout_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- Recommend容器 (推荐商品) -->
    <FrameLayout
        android:id="@+id/recommendContainer"
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <com.example.asynclayoutdemo.AsyncViewStub
            android:id="@+id/recommendViewStub"
            app:layoutRes="@layout/layout_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

